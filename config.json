{
  "trigger": {
    "prefix": "!",
    "command": {
      "get": "quote",
      "insert": "quote",
      "update": "requote",
      "delete": "unquote",
      "help": "help"
    }
  },
  "feedback": {
    "success": {
      "insert": ":brain: **I'll remember this one...**",
      "update": {
        "title": ":pencil: **Quote edited successfully**",
        "before": "**from:**",
        "after": "**to:**"
      },
      "delete": ":put_litter_in_its_place: **To the trash:**"
    },
    "error": {
      "rights": ":no_entry: Operation failed. Insufficient privileges.",
      "get": ":person_shrugging: Error: No quote available.",
      "update": {
        "item": ":person_shrugging: Cannot edit this quote. It doesn't appear to exist.",
        "last": ":person_shrugging: Error: No quote available."
      },
      "delete": {
        "item": ":person_shrugging: Something went wrong. Cannot delete this quote.",
        "last": ":person_shrugging: Error: No quote available."
      }
    },
    "help": {
      "about": ":robot: Beep Beep Boop!\nI am a bot that outputs quotes upon commands.\nHere's how I work:",
      "user": {
        "title": ":busts_in_silhouette: **Everyone can**",
        "get": "Get a random quote",
        "insert": {
          "item": "Save a quote",
          "format": "your_quote"
        }
      },
      "admin": {
        "title": ":detective: **This bot admins only can**",
        "update": {
          "title": "Edit quotes",
          "item": "Any quote",
          "last": "Last saved quote",
          "format": {
            "before": "old_quote",
            "after": "new_quote"
          }
        },
        "delete": {
          "title": "Delete quotes",
          "item": "Any quote",
          "last": "Last saved quote",
          "format": "quote_to_delete"
        }
      },
      "self": {
        "title": ":hand_splayed: **Want to display this message again?**",
        "prefix": {
          "command": "Use",
          "mention": "or mention me"
        }
      }

    }
  }
}
